@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <!-- BootStrap nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#status" aria-controls="status" role="tab" data-toggle="tab">Status</a></li>
        <li role="presentation"><a href="#products" aria-controls="products" role="tab" data-toggle="tab">Products</a></li>
        <li role="presentation"><a href="#lines" aria-controls="lines" role="tab" data-toggle="tab">Lines</a></li>
    </ul>
    <!-- BootStrap panes for tabs -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="status">

        </div>
        <div role="tabpanel" class="tab-pane" id="products">
            <div class="col-sm-6" id="divProducts"></div>
        </div>
        <div role="tabpanel" class="tab-pane" id="lines">
            <!-- Here you create lines and define it's operations -->
            <div class="col-sm-6" id="divLines"></div>
            <div class="col-sm-6" id="divOperations"></div>
        </div>
    </div>
</div>

<!-- TEMPLATES -->
<!-- PRODUCT -->
<!-- product list header and add button -->
<script type="text/template" id="productListView-template">
    <div class="col-sm-10">
        <h4>Products</h4>
    </div>
    <div class="col-sm-2">
        <div class="row">
            <button class="btn btn-default addButton">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>
</script>
<!-- product list header and add form -->
<script type="text/template" id="productListAddView-template">
    <div class="col-sm-12">
        <h4>Add new product</h4>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="Name" />
        </div>
    </div>
    <div class="col-sm-2">
        <div class="row">
            <button class="btn btn-default saveButton">
                <span class="glyphicon glyphicon-ok"></span>
            </button>
        </div>
        <div class="row">
            <button class="btn btn-default cancelButton">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </div>
    </div>
</script>
<!-- product list item in view state -->
<script type="text/template" id="productView-template">
    <div class="col-sm-10 productView">
        <label><%=Name%></label>
    </div>
    <div class="col-sm-2">
        <div class="row">
            <button class="btn btn-default editButton">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
            <button class="btn btn-default deleteButton">
